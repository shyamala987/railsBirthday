<h1>New Birthday</h1>

<%= form_with model: @birthdays do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @birthday.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :birthday %><br>
    <%= form.text_area :birthday %>
    <% @birthday.errors.full_messages_for(:birthday).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
