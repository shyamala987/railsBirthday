<h1>New Birthday</h1>

<%= form_with model: @birthday, url: birthdays_path do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @birthday.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :dob %><br>
    <%= form.text_area :dob %>
    <% @birthday.errors.full_messages_for(:dob).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
